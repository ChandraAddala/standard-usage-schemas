<productSchema xmlns="http://docs.rackspace.com/core/usage/schema"
               namespace="http://docs.rackspace.com/usage/emailapps_usage/mailbox"
               version="1"
               serviceCode="EmailAppsUsage" type="USAGE_SNAPSHOT"
               resourceTypes="EXCHANGE_EMAIL_2007 EXCHANGE_EMAIL_2010 EXCHANGE_EMAIL_2013"
               ranEnrichmentStrategy="NONE">
    <description>
        Specifes the number of email boxes per account Id for Email and Apps.
    </description>
    <attribute name="storage" type="int" use="required"
               unitOfMeasure="GB" min="0" max="100">
        Specifies the maximum size of the email box for the individual mailbox, in GB.
    </attribute>
</productSchema>

<productSchema xmlns="http://docs.rackspace.com/core/usage/schema"
               namespace="http://docs.rackspace.com/event/servers/slice"
               serviceCode="CloudServers"
               version="1"
               resourceTypes="SLICE" type="INFO">
    <description>
        Slice Action Event.
    </description>
    <attribute name="rootPassword" type="string" use="optional">
    	The encrypted root password for a slice.
    </attribute>
    <attribute name="managed" type="boolean" use="required">
        Is slice Managed.
    </attribute>
    <attribute name="imageId" type="int" use="required">
        The Image ID for the Slice.
    </attribute>
    <attribute name="options" type="int" use="required">
        The Options for the Slice, used for billing purposes.
    </attribute>
    <attribute name="huddleId" type="int" use="required">
        The huddle ID.
    </attribute>
    <attribute name="serverId" type="int" use="required">
        The Server ID for the Slice. This is the host ID.
    </attribute>
    <attribute name="action" type="string" use="required" searchable="true"
               allowedValues="ADD_IP RESIZE REBOOT PASSWORD_RESET_DONE ADD_ALTERNATE_IP RENAME KERNEL_UP_TO_DATE HARD_REBOOT DELETE_IP BUILD DESTROY ADD_IP_NO_CONFIG DELETE_IP_NO_CONFIG KERNEL_UPDATE_FAILED UPGRADE_DEVICE_SERVICE_LEVEL DOWNGRADE_DEVICE_SERVICE_LEVEL">
        The action that caused this event to be created.
    </attribute>
    <attribute name="imageName" type="string" use="required">
        The name of the image
    </attribute>
    <attribute name="customerId" type="int" use="required">
        The Customer ID for the Slice. This may be the same as the tenantId or may be the internal nucleus customer_id.
    </attribute>
    <attribute name="flavorId" type="int" use="required">
        The Flavor ID for the Slice.
    </attribute>
    <attribute name="status" type="string" use="required" searchable="true"
               allowedValues="BUILD ACTIVE DELETED QUEUE_RESIZE PREP_RESIZE RESIZE VERIFY_RESIZE QUEUE_MOVE PREP_MOVE MOVE VERIFY_MOVE ERROR ERROR_ASYNC RESCUE SUSPENDED PENDING MAINTENANCE CLONE">
        The status.
    </attribute>
    <attribute name="sliceType" type="string" use="required"
               allowedValues="CLOUD SLICE">
        The slice type. This was used when we had Slicehost and Rackspace customers; now all are Rackspace customers and sliceType is always 'CLOUD'.
    </attribute>
    <attribute name="privateIp" type="string" use="required">
        The private IP of the slice
    </attribute>
    <attribute name="publicIp" type="string" use="required">
        The public IP of the slice
    </attribute>
    <attribute name="dns1" type="string" use="required">
        The dns1 of the slice
    </attribute>
    <attribute name="dns2" type="string" use="required">
        The dns2 of the slice
    </attribute>
    <attribute name="createdAt" type="utcDateTime" use="required">
        The date the slice was created.
    </attribute>
    <attributeGroup name="sliceMetaData" minOccurs="0" maxOccurs="unbounded">
        <description>
            A list key/value meta data.
        </description>
        <attribute name="key" type="string" use="required">
            The key
        </attribute>
        <attribute name="value" type="string" use="required">
            The value
        </attribute>
    </attributeGroup>
    <attributeGroup name="additionalPublicAddress" minOccurs="0" maxOccurs="unbounded">
        <description>
            A list of public addresses
        </description>
        <attribute name="ip" type="string" use="required">
            The IP
        </attribute>
        <attribute name="dns1" type="string" use="required">
            The dns1
        </attribute>
        <attribute name="dns2" type="string" use="required">
            The dns1
        </attribute>
    </attributeGroup>
</productSchema>

<alternatives xmlns="http://docs.rackspace.com/core/usage/schema">
    <productSchema xmlns="http://docs.rackspace.com/core/usage/schema"
                   xmlns:xsd="http://www.w3.org/2001/XMLSchema"
                   namespace="http://docs.rackspace.com/usage/bigdata"
                   serviceCode="BigData"
                   version="1" resourceTypes="HADOOP_HDP1_1 HADOOP_HDP1_3 HBASE_HDP1_1 HBASE_HDP1_3">
        <description>
            Usage message for a big data cluster.
        </description>

        <attribute name="flavorId" type="string"
                   maxLength="50" minLength="1"
                   use="required"
                   groupBy="true">
            The flavor id of the cluster.
        </attribute>

        <attribute name="flavorName" type="string"
                   maxLength="300" minLength="1"
                   use="required"
                   groupBy="true">
            The flavor name of the cluster.
        </attribute>

        <attribute name="numberServersInCluster" type="unsignedInt"
                   use="required" min="1" max="3000"
                   groupBy="true">
            This is the number of data nodes in cluster.
        </attribute>

        <attribute name="aggregatedClusterDuration" type="unsignedLong"
                   use="synthesized" unitOfMeasure="S"
                   aggregateFunction="SUM">
            This is the sum of the durations in seconds of all nodes of the cluster.
        </attribute>

        <attribute name="bandwidthIn" type="unsignedLong" use="required"
                   unitOfMeasure="KB" aggregateFunction="SUM" min="0"
                   max="16000000000">
            The amount of bandwidth in, in kilobytes.
        </attribute>

        <attribute name="bandwidthOut" type="unsignedLong" use="required"
                   unitOfMeasure="KB" aggregateFunction="SUM" min="0"
                   max="16000000000">
            The amount of bandwidth out, in kilobytes.
        </attribute>
    </productSchema>
    <productSchema xmlns="http://docs.rackspace.com/core/usage/schema"
                   xmlns:xsd="http://www.w3.org/2001/XMLSchema"
                   namespace="http://docs.rackspace.com/usage/bigdata"
                   serviceCode="BigData"
                   version="2" resourceTypes="HADOOP_HDP2_0 HADOOP_HDP1_3 HBASE_HDP2_0 HBASE_HDP1_3">
    <description>
        Usage message for a big data cluster.
    </description>

    <attribute name="flavorId" type="string"
               maxLength="50" minLength="1"
               use="required"
               allowedValues="hadoop1-7 hadoop1-15 hadoop1-30 hadoop1-60"
               groupBy="true">
        The flavor id of the cluster.
    </attribute>

    <attribute name="flavorName" type="string"
               maxLength="300" minLength="1"
               use="required"
               groupBy="true">
        The flavor name of the cluster.
    </attribute>

    <attribute name="numberServersInCluster" type="unsignedInt"
               use="required" min="1" max="3000"
               groupBy="true">
        This is the number of data nodes in cluster.
    </attribute>

    <attribute name="aggregatedClusterDuration" type="unsignedLong"
               use="synthesized" unitOfMeasure="S"
               aggregateFunction="SUM">
        This is the sum of the durations in seconds of all nodes of the cluster.
    </attribute>

    <attribute name="bandwidthIn" type="unsignedLong" use="required"
               unitOfMeasure="KB" aggregateFunction="SUM" min="0"
               max="16000000000">
        The amount of bandwidth in, in kilobytes.
    </attribute>

    <attribute name="bandwidthOut" type="unsignedLong" use="required"
               unitOfMeasure="KB" aggregateFunction="SUM" min="0"
               max="16000000000">
        The amount of bandwidth out, in kilobytes.
    </attribute>
    </productSchema>
</alternatives>
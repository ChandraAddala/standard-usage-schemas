<?xml version="1.0"?>
<productSchema xmlns="http://docs.rackspace.com/core/usage/schema"
               namespace="http://docs.rackspace.com/event/newrelic/alert"
               serviceCode="NewRelic"
               type="INFO"
               version="1">
    <description>
        Specifies the events related to New Relic alerts.
    </description>
    <attribute name="messageType" type="string" use="required">
        Specifies the message type.
    </attribute>
    <attribute name="message" type="string" use="required">
        Specifies the message for the support team.
    </attribute>
    <attribute name="createdAt" type="utcDateTime" use="required">
        Specifies the created time.
    </attribute>
    <attribute name="accountName" type="string" use="required">
        Specifies the account name.
    </attribute>
    <attribute name="severity" type="string" use="required">
        Specifies the severity of the issue with values like 'critical', 'downtime', 'caution'.
    </attribute>
    <attribute name="shortDescription" type="string" use="required">
        Specifies the short description about alert.
    </attribute>
    <attribute name="longDescription" type="string" use="required">
        Specifies the long description about alert.
    </attribute>
    <attribute name="supportTeam" type="string" use="required">
        Specifies the support team name.
    </attribute>
    <attribute name="alertPolicyName" type="string" use="optional">
        Specifies the alert policy name.
    </attribute>
    <attribute name="alertUrl" type="string" use="optional">
        Specifies the alert Url.
    </attribute>
    <attribute name="applicationName" type="string" use="optional">
        Specifies the application name.
    </attribute>
    <attribute name="servers" type="string" use="optional">
        Specifies the servers related to the alert.
    </attribute>
    <attribute name="serverEvents" type="string" use="optional">
        Specifies the server events.
    </attribute>
</productSchema>

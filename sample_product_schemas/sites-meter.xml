<productSchema xmlns="http://docs.rackspace.com/core/usage/schema"
               namespace="http://docs.rackspace.com/usage/sites/metered"
               serviceCode="CloudSites"
               version="1" type="USAGE"
               resourceTypes="SITE">
    <description>
        Metered usage for a site.
    </description>
    <aggregationPeriods>
        <aggregationPeriod>PT6H</aggregationPeriod>
        <aggregationPeriod>PT18H</aggregationPeriod>
    </aggregationPeriods>
    <attribute name="bandWidthOut" type="unsignedLong" use="required"
               unitOfMeasure="B" aggregateFunction="SUM"
               min="0" max="2199023255552">
        The amount of bandwidth out in bytes.
    </attribute>
    <attribute name="requestCount" type="unsignedInt" use="required"
               unitOfMeasure="COUNT" 
               min="0" max="50000000">
        The request count for the site.
    </attribute>
    <attribute name="computeCycles" type="double"
               use="optional" default="0"
               unitOfMeasure="COUNT"
               aggregateFunction="SUM"
               min="0" max="12500">
        The compute cycles for the site.
    </attribute>
</productSchema>

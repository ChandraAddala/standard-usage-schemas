<productSchema xmlns="http://docs.rackspace.com/core/usage/schema"
               namespace="http://docs.rackspace.com/usage/cloudfiles/storage"
               serviceCode="CloudFiles"
               version="1"
               groupByResource="false">
    <description>
      CloudFiles account storage information.
    </description>
    <attribute name="disk" type="int" use="required"
               unitOfMeasure="B">
        The amount of disk usage in bytes.
    </attribute>
    <attribute name="freeops" type="int" use="required">
        The number of free operations.
    </attribute>
    <attribute name="costops" type="int" use="required">
        The number of cost operations
    </attribute>
</productSchema>

<productSchema xmlns="http://docs.rackspace.com/core/usage/schema"
               namespace="http://docs.rackspace.com/event/servers/image"
               serviceCode="CloudServers"
               version="1"
               resourceTypes="IMAGE" type="INFO">
    <description>
        Image Action Event.
    </description>
    <attribute name="sliceId" type="int" use="required">
        The slice ID.
    </attribute>
    <attribute name="action" type="string" use="required"
               allowedValues="SERVICE_LEVEL_CHANGE_SNAP_KILLED SNAPSHOT SERVICE_LEVEL_CHANGE_SNAP_SUCCESSFUL">
        The action.
    </attribute>
    <attribute name="imageName" type="string" use="required">
        The name of the image
    </attribute>
</productSchema>
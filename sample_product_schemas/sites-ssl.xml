<productSchema xmlns="http://docs.rackspace.com/core/usage/schema"
               namespace="http://docs.rackspace.com/usage/sites/ssl"
               serviceCode="CloudSites"
               version="1" type="USAGE_SNAPSHOT"
               resourceTypes="SITE">
    <description>
        Specifies the SSL usage for a site.
    </description>
    <aggregationPeriods>
        <aggregationPeriod>PT24H</aggregationPeriod>
    </aggregationPeriods>
    <attribute name="SSLenabled" type="boolean" use="required"
               unitOfMeasure="COUNT" aggregateFunction="MAX">
        Specifies whether SSL usage is enabled.
    </attribute>
</productSchema>

<productSchema xmlns="http://docs.rackspace.com/core/usage/schema"
               namespace="http://docs.rackspace.com/event/servers/bandwidth"
               serviceCode="CloudServers"
               version="1" resourceTypes="SLICE">
    <description>
        Specifies the usage message for slice bandwidth.
    </description>
    <attribute name="bandwidthIn" type="unsignedLong" use="required"
               unitOfMeasure="KB" aggregateFunction="SUM" min="0" 
               max="6480000000">
        Specifies the amount of inbound bandwidth, in kilobytes.
    </attribute>
    <attribute name="bandwidthOut" type="unsignedLong" use="required"
               unitOfMeasure="KB" aggregateFunction="SUM" min="0" 
               max="6480000000">
        Specifies the amount of outbound bandwidth, in kilobytes.
    </attribute>
</productSchema>

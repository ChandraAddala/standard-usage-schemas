<productSchema xmlns="http://docs.rackspace.com/core/usage/schema"
               namespace="http://docs.rackspace.com/usage/cbs"
               serviceCode="CloudBlockStorage"
               version="1"
               resourceTypes="VOLUME">
    <description>
        CBS specific usage fields.
    </description>
    <attribute name="type" type="string" use="required"
               allowedValues="HIGH STANDARD">
        Describes the type of volume used.  HIGH is high performance
        based on SSD.  STANDARD in based on SATA.
    </attribute>
    <attribute name="provisioned" type="int" use="required"
               unitOfMeasure="GB" groupBy="true">
        The amount of storage provisioned for the volume.
    </attribute>
    <attribute name="snapshot" type="int" use="required"
               unitOfMeasure="GB" groupBy="true">
        The amount of backup (snapshot) storage used for the volume.
    </attribute>
</productSchema>

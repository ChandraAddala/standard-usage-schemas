<alternatives xmlns="http://docs.rackspace.com/core/usage/schema">
    <productSchema xmlns="http://docs.rackspace.com/core/usage/schema"
        namespace="http://docs.rackspace.com/usage/cloudbackup/license"
        serviceCode="CloudBackup"
        version="1"
        resourceTypes="AGENT">
        <description>
            Cloud Backup periodic license event.
        </description>
        <attribute name="serverID" type="int UUID" use="required">
            Server ID, where the agent in installed.
        </attribute>
    </productSchema>
    <productSchema xmlns="http://docs.rackspace.com/core/usage/schema"
        namespace="http://docs.rackspace.com/usage/cloudbackup/license"
        serviceCode="CloudBackup"
        version="2"
        resourceTypes="AGENT">
        <description>
            Cloud Backup periodic license event (version 2).
        </description>
        <attribute name="serverID" type="int UUID" use="optional">
            Server ID, where the agent in installed.
        </attribute>
        <attribute name="serverName" type="string" use="required">
            Server Name, where the agent is installed
        </attribute>
        <attribute name="external" type="boolean" use="optional" default="false">
            True if the server where the agent is installed is external to Rackspace
        </attribute>
        <xpathAssertion test="if (not(xsd:boolean(@external))) then @serverID else true()">
            If the server is NOT external, then Server ID is required.
        </xpathAssertion>
    </productSchema>
</alternatives>

<productSchema xmlns="http://docs.rackspace.com/core/usage/schema"
    namespace="http://docs.rackspace.com/usage/widget"
    version="3"
    serviceCode="Widget"
    type="UPDATE DELETE"
    resourceTypes="WIDGET GADGET THINGY">
    <description>
        Test changing the message type.
    </description>
    <attribute name="label" type="string" use="required" searchable="true">
        Human readable name.
    </attribute>
    <attribute name="mid" type="UUID" use="required">
        An example of an UUID.
    </attribute>
    <attribute name="delReqAttribute" type="string" use="required"
               withEventType="DELETE">
        An example attribute requried only on DELETE events.
    </attribute>
    <attribute name="delOptionalAttribute" type="string" use="optional"
               withEventType="DELETE">
        An example attribute optional only on DELETE events.
    </attribute>
    <attribute name="widgetOnlyAttribute" type="string" use="required"
               withResource="WIDGET">
        A widget only attribute.
    </attribute>
    <attribute name="privateAttribute1" type="string" use="optional"
               private="true">
        A private attribute that is not supposed to be shown to public
    </attribute>
    <attribute name="myAttribute" type="" use="optional" private="true">
        An attribute that needs to be private here, but not in sub elements.
    </attribute>
    <attribute name="privateAttribute3" type="Name" use="optional"
               allowedValues="W1 W2 W3"
               private="true">
        Another private attribute that is not supposed to be shown to public
    </attribute>
    <attributeGroup name="metaData" minOccurs="0" maxOccurs="unbounded">
        <description>
            A list key/value meta data.
        </description>
        <attribute name="key" type="string" use="required" searchable="true">
            The key
        </attribute>
        <attribute name="value" type="string" use="required" private="true">
            The value
        </attribute>
    </attributeGroup>
    <attributeGroup name="mixPublicPrivateAttributes" minOccurs="0" maxOccurs="5">
        <description>
            A list of mixed public and private attributes
        </description>
        <attribute name="privateAttribute3" type="int" use="optional" private="true">
            The 3rd private attribute but this time it is part of attributeGroup
        </attribute>
        <attribute name="myAttribute" type="string" use="optional" private="false">
            An attribute that needs to be public here, but not inside product
            element.
        </attribute>
    </attributeGroup>
</productSchema>

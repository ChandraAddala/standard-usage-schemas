<productSchema xmlns="http://docs.rackspace.com/core/usage/schema"
               namespace="http://docs.rackspace.com/event/support/account"
               serviceCode="Support"
               version="1" resourceTypes="ACCOUNT_SUPPORT" 
               type="CREATE UPDATE">
    <description>
        Events for support information on account creation or updates.
    </description>
    <attribute name="accountType" type="string"
               use="required" allowedValues="CLOUD MANAGED_HOSTING"
               searchable="true">
        The account type.
    </attribute>
    <attributeGroup name="team" minOccurs="0" maxOccurs="30">
        <description>
            A list of teams associated with this account
        </description>
        <attribute name="teamType" type="string"
                   use="required" allowedValues="SUPPORT REVENUE"> 
            The team type.
        </attribute>
        <attribute name="teamNumber" type="int" use="required"> 
            The team number.
        </attribute>
    </attributeGroup>
</productSchema>

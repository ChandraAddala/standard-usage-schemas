<productSchema xmlns="http://docs.rackspace.com/core/usage/schema"
        namespace="http://docs.rackspace.com/usage/monitoring"
        version="1"
        name="MaaS"
        resourceTypes="MONITOR">
    <description>
        MaaS specific user fields
    </description>
    <attribute name="label" type="string" use="required">
        Human readable name.
    </attribute>
    <attribute name="mid" type="UUID" use="required">
        An example of an UUID.
    </attribute>
    <attribute name="type" type="string" use="optional">
        An optional type.
    </attribute>
    <attribute name="monitoring_zones_pole" type="int*" use="optional" 
               aggregateFunction="SUM" unitOfMeasure="COUNT">
        A list of integers.
    </attribute>
    <attribute name="num_checks" type="int" use="required">
        A single integer.
    </attribute>
    <attribute name="disabled" type="boolean" use="optional" default="false"
               displayName="Disabled">
        A boolean.
    </attribute>
    <attribute name="eventType" type="string" 
               allowedValues="BEST BETTER WORST" use="required">
        An enumeration.
    </attribute>
    <attribute name="time" type="utcTime" use="required">
        A time in UTC.
    </attribute>
    <attribute name="dateTime" type="utcDateTime" use="required">
        A datetime in UTC.
    </attribute>
    <attribute name="eventTypeList" type="Name*"
               allowedValues="BEST BETTER WORST" use="required">
        A list of enumertation strings.
    </attribute>
</productSchema>
